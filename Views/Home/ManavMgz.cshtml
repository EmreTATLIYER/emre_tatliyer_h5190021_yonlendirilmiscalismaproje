@model  emre_tatliyer_h5190021_yonlendirilmiscalismaproje.Models.ViewModel

@{
    ViewBag.Title = "ManavMgz";
    Layout = "~/Views/Shared/AnasayfaLayout.cshtml";

    ViewBag.layoutrol = ViewBag.rol;
}

<html>
<head>
    <style>
        #scroll {
            overflow: auto;
            max-height: 120px;
            min-width: 230px;
        }

        .markettablorengi {
            background-color: #e0e0e0;
            font-size: 28px;
        }

        .market.content {
            max-height: auto;
            font-size: 20px;
            background-color: #1A8CDC;
        }

        .row.contennt {
            max-height: auto;
            height: 1200px;
            font-size: 29px;
            background-color: #A3CCE8;
        }

        .row.content a {
            display: block;
            color: black;
            padding: 18px;
            text-decoration: none;
        }

            .row.content a.aktif {
                background-color: #04AA6D;
                color: white;
            }

            .row.content a:hover:not(.aktif) {
                background-color: #555;
                color: white;
            }


        .scroll-conntainer {
            height: 1000px;
            width: 1330px;
            overflow-y: scroll;
            scroll-behavior: smooth;
        }

        .scroll-page {
            display: flex;
            align-items: start;
            justify-content: center;
            height: 100%;
            font-size: 2em;
        }
        .product-container {
            display: flex;
            flex-wrap: wrap;
            margin-left: 330px;
            padding: 7px;
        }

        .product-card {
            flex: 1 80%;
            text-align: center;
            padding: 0;
            margin: 10px;
        }


        .urunli {
            display: flex;
            width: max-content;
            padding: 10px;
            margin-block-start: 0px;
        }

        .product-title {
            display: flex;
            width: max-content;
        }

        .product-card img {
            margin-bottom: 15px;
        }
    </style>

</head>
<body>

    <div>
        <div class="col-sm-10 text-left">
            <div>
                <ul style="list-style-type:none">
                    @foreach (var item in Model.magaza)
                    {


                        <li class="list-group">
                            <!-- Tbl_Kategoriden gelen verileri bu kısımda ekrana basıyor -->
                            <p class="markettablorengi">

                                &emsp;&emsp;<img src="@Url.Content(item.MagazaResmi)" height="111px;" /> &emsp;&emsp;&emsp;
                                &emsp;&emsp;&emsp;@item.MagazaAdi   <br /> &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;Süre: @item.MagazaSure Dk  &emsp;&emsp;&emsp;&emsp;
                                Minimum Tutar: @item.MagazaMinTutar Tl&emsp;&emsp;&emsp;&emsp;&emsp;&emsp; Puan: @item.MagazaPuan

                            </p>


                        </li>
                    }

                </ul>

            </div>
        </div>
    </div>                
    <div class="container-fluid text-center">
        <div class="col-sm-8 text-left">

            <div class="scroll-conntainer">
                <div class="scroll-page" id="page-1">
                    Meyve

                    <div class="product-card">

                        <ul style="list-style-type:none">

                            @foreach (var item in Model.urunler)
                            {

                                <li style="float:left" ; display:block;">
                                    <a class="urunli" href="">
                                        <div>

                                            <img src="@Url.Content(item.UrunResim)" height="89px" width="93px" />

                                            <h3 class="product-title">@item.UrunAdi</h3>
                                            <span class="product-title">Ürün Bilgisi: @item.UrunAciklama </span>
                                            <span class="product-title">@item.UrunFiyat Tl</span>

                                        </div>
                                    </a>

                                </li>
                            }

                        </ul>

                    </div>

                </div>
                
                <div class="scroll-page" id="page-2">Sebze</div>
                <div class="scroll-page" id="page-3">Otlar,Yeşillikler</div>
            </div>
        </div>
        <div class="row contennt">
            <div class="col-sm-2">
                <div>

                    <nav>
                        <a href="#page-1">Meyve</a>
                        <a href="#page-2">Sebze</a>
                        <a href="#page-3">Otlar,Yeşillikler</a>
                    </nav>
                </div>

            </div>




        </div>
    </div>

</body>
</html>

